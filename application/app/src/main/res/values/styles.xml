<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DropdownPopupTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:colorBackground">#2B2B2B</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:background">#2B2B2B</item>
    </style>
    <!-- Base card style -->
    <style name="StatCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#1E1E1E</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">#C8FD00</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Card title text style -->
    <style name="StatCardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <!-- Card value text style -->
    <style name="StatCardValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#C8FD00</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    <!-- Warning style for low stock -->
    <style name="StatCardStyle.Warning" parent="StatCardStyle">
        <item name="strokeColor">#FF5252</item>
    </style>

    <!-- Success style for good stock -->
    <style name="StatCardStyle.Success" parent="StatCardStyle">
        <item name="strokeColor">#4CAF50</item>
    </style>
</resources>